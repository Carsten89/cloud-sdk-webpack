#!/usr/bin/env node

'use strict';

const { argv } = require('yargs');
const { resolve } = require('path');
const { ENV_KEY_PRODUCTION } = require('../dist/environment');

// Set the theme key.
if (argv.theme) {
  process.env.theme = argv.theme;
}

process.env.SDK_PATH = resolve(__dirname, '..');

// Set the environment to production.
process.env.NODE_ENV = ENV_KEY_PRODUCTION;

require('../dist/build.js');
