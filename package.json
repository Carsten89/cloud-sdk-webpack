{
  "name": "@shopgate/cloud-sdk-webpack",
  "version": "1.10.4",
  "description": "Shopgate's Webpack compiler",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shopgate/cloud-sdk-webpack.git"
  },
  "bugs": {
    "url": "https://github.com/shopgate/cloud-sdk-webpack/issues"
  },
  "homepage": "https://github.com/shopgate/cloud-sdk-webpack",
  "keywords": [
    "shopgate",
    "cloud",
    "sdk",
    "webpack",
    "compiler"
  ],
  "contributors": [
    "Florian MÃ¼ller <florian.mueller81@gmx.de> (https://github.com/devbucket)",
    "Richard Gorman <richardgorman@outlook.com> (https://github.com/richardgorman)"
  ],
  "main": "index.js",
  "bin": {
    "sgcloud-webpack": "./bin/sgcloud-webpack"
  },
  "scripts": {
    "start": "nodemon --exec \"npm run build\"",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "cover": "rimraf ./build ./.nyc_output && nyc mocha",
    "lint": "eslint --parser babel-eslint --ignore-path .gitignore --ignore-path .eslintignore  --ext .js .",
    "lint-staged": "lint-staged",
    "prebuild": "rimraf ./lib",
    "build": "NODE_ENV=production babel src --out-dir lib --no-comments",
    "postbuild": "cp -R ./src/webpackConfig/templates ./lib/webpackConfig/ && git add -A",
    "production": "node ./bin/sgcloud-webpack",
    "preversion": "npm test",
    "version": "npm run build && git add -A",
    "postversion": "git push && git push --tags && npm publish --access public"
  },
  "lint-staged": {
    "*.js": "eslint --parser babel-eslint --ignore-path .gitignore --ignore-path .eslintignore  --ext .js ."
  },
  "devDependencies": {
    "@shopgate/eslint-config": "^1.0.3",
    "babel-cli": "^6.26.0",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-runtime": "^6.26.0",
    "coveralls": "^3.0.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "jsdom": "^11.3.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^5.0.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.4",
    "nyc": "^11.3.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.2"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "bluebird": "^3.5.1",
    "cache-loader": "^1.1.0",
    "chalk": "^2.3.0",
    "color": "^2.0.1",
    "compression-webpack-plugin": "^1.0.1",
    "css-loader": "^0.28.7",
    "ejs-loader": "^0.3.0",
    "html-webpack-plugin": "^2.30.1",
    "intl": "^1.2.5",
    "json-loader": "^0.5.7",
    "lodash": "^4.17.4",
    "offline-plugin": "^4.8.4",
    "preload-webpack-plugin": "^2.3.0",
    "progress-bar-webpack-plugin": "^1.10.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "require-uncached": "^1.0.3",
    "string-replace-webpack-plugin": "^0.1.3",
    "style-loader": "^0.19.0",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.1",
    "yargs": "^10.0.3"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "pre-commit": [
    "lint-staged",
    "build"
  ],
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "lib/*"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "build",
      "test",
      "lib"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true,
    "report-dir": "build"
  }
}
